<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="debug"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="FULL_LOG" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="target/log/nrtmosaic.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="1"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>


    <logger name="process">
        <level value="WARN" />
        <appender-ref ref="CONSOLE" />
    </logger>
                         <!--
    <logger name="dk.statsbiblioteket.summa.support.alto.Alto">
        <level value="DEBUG" />
        <appender-ref ref="CONSOLE" />
    </logger>
                             -->

    <logger name="dk.statsbiblioteket.summa.common.rpc.ConnectionConsumer">
        <level value="DEBUG" />
        <appender-ref ref="CONSOLE" />
    </logger>



    <root>
        <level value="DEBUG" />
        <appender-ref ref="FULL_LOG" />
    </root>

</log4j:configuration>
