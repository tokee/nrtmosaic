<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>dk.statsbiblioteket.nrtmosaic.service</display-name>

  <listener>
    <listener-class>dk.statsbiblioteket.nrtmosaic.service.NrtmosaicResource</listener-class>
  </listener>

  <servlet>
    <servlet-name>Nrtmosaic Service</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>dk.statsbiblioteket.nrtmosaic.service</param-value>                   
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
      <param-value>true</param-value>
    </init-param> 
    <load-on-startup>1</load-on-startup>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>Nrtmosaic Service</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>api.jsp</welcome-file>
  </welcome-file-list>



</web-app>
